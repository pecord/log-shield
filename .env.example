# ── Database ────────────────────────────────────────────────
DATABASE_URL="postgresql://logshield:logshield_secret@localhost:5432/logshield?schema=public"

# ── Auth.js ─────────────────────────────────────────────────
# Generate with: openssl rand -base64 32
AUTH_SECRET="change-me-generate-a-random-secret"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true

# ── OAuth Providers (optional) ──────────────────────────────
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# ── LLM API Keys (optional — enables AI-powered analysis) ──
# Configure one or both. Can also be set per-user in the Settings page.
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ── S3 Storage (optional — defaults to local filesystem) ────
# S3-compatible object storage for uploaded files (AWS S3, MinIO, R2)
S3_ENDPOINT=
S3_REGION=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_PATH_PREFIX=
S3_FORCE_PATH_STYLE=
